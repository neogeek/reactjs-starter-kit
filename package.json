{
  "name": "@neogeek/reactjs-starter-kit",
  "version": "0.0.1",
  "description": "This repo is a starter kit for working with React.js and ES6.",
  "engines": {
    "node": ">=7.0"
  },
  "license": "MIT",
  "dependencies": {
    "babel-cli": "6.24.0",
    "doxdox": "2.0.2",
    "ejs": "2.5.6",
    "eslint": "3.17.1",
    "express": "4.15.2",
    "history": "4.6.1",
    "node-sass": "4.5.1",
    "react": "15.4.2",
    "react-dom": "15.4.2",
    "react-router": "4.0.0",
    "react-router-dom": "4.0.0",
    "spire-of-babel": "1.2.2"
  },
  "devDependencies": {
    "@neogeek/eslint-config-standards": "1.14.0",
    "concurrently": "3.4.0",
    "nodemon": "1.11.0"
  },
  "scripts": {
    "start": "npm run build && concurrently --kill-others \"nodemon --watch src/ --ext js,jsx --exec npm run serve\" \"npm run watch:css\" \"npm run watch:js\"",
    "postinstall": "npm run build",
    "serve": "babel-node src/server.jsx --presets es2015,react",
    "lint": "eslint 'src/**/*.jsx'",
    "build": "npm run build:src && npm run build:css && npm run build:js",
    "build:css": "node-sass ./src/css/ --output ./static/css/",
    "watch:css": "node-sass ./src/css/ --watch ./src/css/ --output ./static/css/",
    "build:js": "spire-of-babel ./src/js/index.jsx --bundle --minify --sourcemap --output ./static/js/build.min.js",
    "watch:js": "spire-of-babel ./src/js/index.jsx --bundle --minify --sourcemap --watch './src/js/**/*.jsx' --output ./static/js/build.min.js",
    "build:src": "babel src -d dist --presets es2015,react"
  },
  "keywords": [
    "node",
    "babel",
    "express",
    "react",
    "sass",
    "eslint"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/neogeek/reactjs-starter-kit.git"
  },
  "private": true
}
